if [ -z "$ZEPHYR_HELPER" ] 
then
  while : 
  do
     if pgrep JLinkRTTLogger  >/dev/null
     then  
	nc localhost 19021 
     else 
 	clear 
	echo "wait for RTT..." 
	 sleep 5 
     fi 
  done	
else
  ssh -t ${ZEPHYR_HELPER} "while : ; do if pgrep JLinkRTTLogger ; then nc localhost 19021 ; else clear ; echo 'wait for RTT...' ; sleep 5 ; fi ; done"
fi
